{
  "version": "0.0.1",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "command": {
    "bootstrap": {
      "noCi": true,
      "npmClientArgs": [
        "--no-package-lock"
      ]
    },
    "run": {
      "parallel": true
    },
    "publish": {
      "message": "chore(release): publish %s",
      "ignoreChanges": [
        "*.md"
      ]
    }
  }
}
