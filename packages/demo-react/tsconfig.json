{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "jsx": "preserve",
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "allowJs": true,
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "removeComments": false,
    "types": [
      "jest"
    ],
    "baseUrl": ".",
  },
  "include": [
    "src"
  ]
}
